<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Samtale</title>
    <link rel="stylesheet" href="css/main.css"/>
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <script src="js/optimized.js"></script>
</head>
<body>
<div id="app">
    <header id="title">
        <h1>Samtale</h1>
    </header>
    <div id="sidebar">
        <h3>Settings</h3>
        <input placeholder="Your nickname" type="text" value="" name="nickname" id="nickname" autocomplete="off">
        <ul id="channels">
        </ul>
    </div>
    <div id="cont">
        <div id="content">
            <div id="messages">
                <ul>
                </ul>
            </div>
            <div id="typing">
                <form action="/" id="sendForm" name="sendForm">
                    <div id="formWrap">
                        <input placeholder="Type message here" type="text" value="" name="textInput" id="textInput" autocomplete="off">
                        <input type="submit" value="Send message" name="sendButton" id="sendButton">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</body>
</html>